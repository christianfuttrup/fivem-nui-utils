{
	"compilerOptions": {
		"target": "ES6",
		"module": "commonjs",
		"declaration": true,
		"declarationMap": true,
		"emitDeclarationOnly": true,
		"outDir": "./dist",
		"rootDir": "./src",
		"strict": true,
		"esModuleInterop": true,
		"moduleResolution": "node",
		"sourceMap": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"declarationDir": "./types",
		"types": ["@citizenfx/client"]
	},
	"include": ["src/**/*", "src/types"],
	"exclude": ["node_modules", "dist"]
}
